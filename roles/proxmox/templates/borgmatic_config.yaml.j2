location:
  source_directories:
    - /
    - /boot/efi
  repositories:
    - ssh://u312523@u312523.your-storagebox.de:23/./borg/proxmox
    - ssh://u341924@u341924.your-storagebox.de:23/./borg/proxmox
  one_file_system: true
  exclude_patterns:
    - /var/lib/vz/images/101/vm-101-disk-1.qcow2
    - /var/lib/vz/images/105/vm-105-disk-1.qcow2
    - /var/lib/vz/images/107/vm-107-disk-1.qcow2
    - /var/lock
    - /var/run
    - /var/tmp
    - /var/cache
    - /var/backups
    - /var/log
    - .cache
storage:
  encryption_passphrase: {{ borgmatic_passphrase }}
retention:
  keep_daily: 14
consistency:
    checks:
        - name: disabled
